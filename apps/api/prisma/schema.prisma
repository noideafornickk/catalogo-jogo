generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  WISHLIST
  PLAYING
  FINISHED
  DROPPED
}

enum NotificationType {
  REVIEW_LIKED
}

model User {
  id             String   @id @default(uuid())
  googleSub      String   @unique
  name           String
  avatarUrl      String
  avatarPublicId String?
  avatarCrop     String?  @db.Text
  createdAt      DateTime @default(now())

  profile               Profile?
  reviews               Review[]
  reviewLikes           ReviewLike[]
  sentNotifications     Notification[] @relation("NotificationActor")
  receivedNotifications Notification[] @relation("NotificationRecipient")
}

model Profile {
  id        String  @id @default(uuid())
  userId    String  @unique
  bio       String?
  isPrivate Boolean @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Game {
  id              String   @id @default(uuid())
  rawgId          Int      @unique
  title           String
  coverUrl        String?
  released        DateTime?
  descriptionText String?  @db.Text

  reviews Review[]
}

model Review {
  id        String       @id @default(uuid())
  userId    String
  gameId    String
  rating    Int
  recommend Boolean
  status    Status
  body      String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  game          Game           @relation(fields: [gameId], references: [id], onDelete: Cascade)
  likes         ReviewLike[]
  notifications Notification[]

  @@unique([userId, gameId])
  @@index([gameId])
  @@index([createdAt])
}

model ReviewLike {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId])
  @@index([reviewId])
  @@index([userId])
}

model Notification {
  id              String           @id @default(uuid())
  recipientUserId String
  actorUserId     String
  reviewId        String
  type            NotificationType
  readAt          DateTime?
  createdAt       DateTime         @default(now())

  recipientUser User   @relation("NotificationRecipient", fields: [recipientUserId], references: [id], onDelete: Cascade)
  actor         User   @relation("NotificationActor", fields: [actorUserId], references: [id], onDelete: Cascade)
  review        Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@index([recipientUserId, createdAt])
  @@index([recipientUserId, readAt])
  @@index([reviewId])
}
